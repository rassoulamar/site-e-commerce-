{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
    {% if not (app.user)  %}
<section class="section-main bg padding-y-sm">
    <div class="container">
        <div style="text-align: center" >
            <a href="{{path('home')}}">
            <img src="/images/logos/panier.png"  width="300">
            <h3 style="color: black"> Votre panier est vide, ajouter des produits à votre panier !</h3>
            </a>
    </div>
    </div>
</section>
    {% else %}
<section class="section-main bg padding-y-sm">
    <div class="container">
        <div class="card">
    <table class="table">
        <tr>
            <th>Image</th>
            <th>Nom</th>
            <th>Quantité</th>
            <th>Prix</th>
            <th>Prix total</th>
        </tr>
        <tbody>
            {% set total = 0 %}
            {% for produit in panier %}
                <tr>
                    <td class="w-25"><img src="/images/products/{{ produit.image }}" class=" img-thumbnail"></td>
                    <td>{{ produit.name }}</td>
                    <td>{{ produit.quantite }}</td>
                    <td>{{ produit.price }}</td>
                    <td>{{ produit.price * produit.quantite }}</td>
                    {% set total = total + (produit.price * produit.quantite) %}
                </tr>
            {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>{{ total }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    </div>
</section>
        <div class="container ">
            <div class="row m-2 mb-4 mt-3 ">
            <a href="{{ path('adresse_delivery') }}" class="col btn btn-success mr-5 "> Passer la commande <i class="fas fa-credit-card"></i> </a>
            <button class="col btn btn-primary mr-5"> continuer mes achats <i class="fas fa-shopping-cart"></i> </button>
            <button class="col btn btn-danger  "> Vider mon panier <i class="fas fa-trash"></i> </button>
            </div>

        </div>

        {% endif %}

        {% endblock %}
