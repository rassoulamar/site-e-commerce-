{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="m-4 col-5 mx-auto ">
    {{ form_start(form) }}
    <h3>Créer un compte </h3>
    {{ form_row(form.firstName,{label:"Nom",attr:{'placeholder': 'Entrez votre nom'}}) }}
        {{ form_row(form.lastName,{label:"Prénom",attr:{'placeholder': 'Entrez votre prénom'}}) }}
        {{ form_row(form.email,{label:"Adresse mail",attr:{'placeholder': 'Entrez votre adresse mail'}}) }}
        {{ form_row(form.password,{label:"Mot de passe",attr:{'placeholder': 'Entrez votre mot de passe'}}) }}
        {{ form_row(form.confirm_password,{label:"Confirmer le mot de passe",attr:{'placeholder': 'confirmer votre mot de passe'}}) }}
        <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(form) }}

    </div>

{% endblock %}
