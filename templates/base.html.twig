<!DOCTYPE html>
<html>

    <head>
			<meta charset="UTF-8">
        <title>{% block title %}Bienvenue chez O Yes Télécom!{% endblock %}</title>

        <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="shortcut icon" type="image/x-icon" href="/images/favicon.jpg">

<!-- jQuery -->
<script src="/js/jquery-2.0.0.min.js" type="text/javascript"></script>

<!-- Bootstrap4 files-->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<!-- Font awesome 5 -->
<link href="/fonts/fontawesome/css/fontawesome-all.min.css" type="text/css" rel="stylesheet">

<!-- plugin: owl carousel  -->
<link href="/plugins/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
<link href="/plugins/owlcarousel/assets/owl.theme.default.css" rel="stylesheet">
<script src="/plugins/owlcarousel/owl.carousel.min.js"></script>

<!-- custom style -->
<link href="/css/ui.css" rel="stylesheet" type="text/css"/>
<link href="/css/responsive.css" rel="stylesheet" media="only screen and (max-width: 1200px)" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-notify/0.2.0/js/bootstrap-notify.js"></script>

		<!-- custom javascript -->
<script src="/js/script.js" type="text/javascript"></script>
<script src="/js/notify.js" type="text/javascript"></script>

        {% block stylesheets %}{% endblock %}

	</head>


	<body>
{% block header %}
	<header class="section-header">
		<nav class="navbar navbar-expand-lg navbar-light">
			<div class="container">
				<a class="navbar-brand" href="#"><img class="logo" src="/images/logos/logo-oyes-telecom.png" alt="oyes telecom " title="Oyes telecom le leader de la vente en ligne a Paris "></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTop" aria-controls="navbarTop" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>


					</ul>
					<ul class="navbar-nav">
						<li class="nav-item"><a href="#" class="nav-link" > 09 53 38 48 97 </a></li>


					</ul> <!-- navbar-nav.// -->
				</div> <!-- collapse.// -->
			</div>
		</nav>

		<section class="header-main shadow-sm">
			<div class="container">

				<div class="row-sm align-items-center">
					<div class="col-lg-4-24 col-sm-3">
						<div class="category-wrap dropdown py-1">
							<button type="button" class="btn btn-light  dropdown-toggle" data-toggle="dropdown" ><i class="fa fa-bars"></i> Categories</button>
							<div class="dropdown-menu">
								<div class="navbar-nav mr-auto">
									{{ render(controller('App\\Controller\\HomeAndMenuController::getAllCategories')) }}
								</div>
							</div>
						</div>
					</div>

					<!-- ================== CATEGORIE LISTE DE LA RECHERCHE ================ -->
					<div class="col-lg-11-24 col-sm-8">
						<form action="#" class="py-1">
							<div class="input-group w-100">
								<select class="custom-select"  name="category_name">
									<option value=""> Dans tout le site</option>
									<option value=""> Smartphone</option>
									<option value=""> Tabelette</option>
									<option value=""> Laptop</option>
									<option value=""> Accessoire</option>
									<option value=""> Pièces détachées</option>
									<option value=""> Plus de produits</option>
								</select>
								<input type="text" class="form-control" style="width:40%;" placeholder="Recherche">
								<div class="input-group-append">
									<button class="btn btn-secondary" type="submit">
										<i class="fa fa-search"></i> Chercher
									</button>
								</div>
							</div>
						</form> <!-- search-wrap .end// -->
					</div> <!-- col.// -->
					<div class="col-lg-9-24 col-sm-12">
						<div class="widgets-wrap float-right row no-gutters py-1">
							<div class="col-auto">
								<div class="widget-header dropdown">
									<a href="#" data-toggle="dropdown" data-offset="20,10">
										<div class="icontext">
											<div class="icon-wrap"><i class="text-secondary icon-sm fa fa-user"></i></div>
											<div class="text-wrap text-dark">
												Se connecter <br>
												Mon compte  <i class="fa fa-caret-down"></i>
											</div>
										</div>
									</a>
									{% if not app.user %}
									<div class="dropdown-menu">
										<form class="px-4 py-3" action={{ path('security_login')}} method="post">
											<div class="form-group">
												<label>Addresse mail</label>
												<input type="email" class="form-control" placeholder="entrez votre adresse mail" required name="_username">
											</div>
											<div class="form-group">
												<label>Mot de passe</label>
												<input type="password" class="form-control" placeholder="Entrez votre mot de passe" required name="_password">
											</div>
											<button type="submit" class="btn btn-primary">Connexion</button>
										</form>
										<hr class="dropdown-divider">
										<a class="dropdown-item" href={{ path('security_register') }}>Créer un compte </a>
										<a class="dropdown-item" href="#">Mot de passe oublié</a>
									</div> <!--  dropdown-menu .// -->
										{% else %}
										<div class="dropdown-menu p-2 mt-4" style="width:350px">
											<span style="color:gray"> Bonjour ! vous etes connectez en tant que <strong style="color:green">
													{{ app.user.lastName }} {{ app.user.firstName }}
												({{ app.user.email }})
												</strong></span><br/>
											<div class="mt-2">
												<a  role="button" class="btn btn-secondary" href={{ path('security_logout') }}>Deconnexion</a>
											</div>

										</div>
									{% endif %}
								</div>  <!-- widget-header .// -->
							</div> <!-- col.// -->
							<div class="col-auto">
								<a href="{{ path('panier') }}" class="widget-header">
									<div class="icontext">
										<div class="icon-wrap"><i class="text-secondary icon-sm fa fa-shopping-cart"></i></div>
										<div class="text-wrap text-dark">
											Panier
										</div>
									</div>
								</a>
							</div> <!-- col.// -->
							<div class="col-auto">
								<a href="#" class="widget-header">
									<div class="icontext">
										<div class="icon-wrap"><i class="text-secondary icon-sm  fa fa-heart"></i></div>
										<div class="text-wrap text-dark">
											<span class="small round badge badge-secondary">0</span>
											<div>Favoris</div>
										</div>
									</div>
								</a>
							</div> <!-- col.// -->
						</div> <!-- widgets-wrap.// row.// -->
					</div> <!-- col.// -->
				</div> <!-- row.// -->
			</div> <!-- container.// -->
		</section> <!-- header-main .// -->
	</header> <!-- section-header.// -->
{% endblock %}
{% block body %}
{% endblock %}
