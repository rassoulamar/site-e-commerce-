{% extends 'admin/admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% block container %}
        <div class="m-4">
    <h1>La liste des utilisateurs </h1>

    <table class="table">
        <thead class="w-25 p-3">
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="w-15 p-3">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <div>
                    <a role="button" class="btn btn-secondary" href="{{ path('user_show', {'id': user.id}) }}">Afficher</a>
                    <a role="button" class="btn btn-secondary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de resultas trouvé </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a role="button" class="btn btn-secondary" href="{{ path('user_new') }}">Créer un nouveau utilisateur </a>
        </div>
{% endblock %}
{% endblock %}
